<Window x:Class="SAM.Picker.Modern.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:SAM.Picker.Modern" mc:Ignorable="d" Title="SAM Reborn 2026" Height="700" Width="1000" WindowStyle="None" AllowsTransparency="True" Background="#1E1E1E" Foreground="White" FontFamily="Segoe UI Variable Display, Segoe UI, sans-serif" ResizeMode="CanResizeWithGrip">
            <WindowChrome.WindowChrome>
                <WindowChrome CaptionHeight="40" GlassFrameThickness="0" CornerRadius="0"/>
            </WindowChrome.WindowChrome>
            <Window.Resources>
                <!-- Button Styles -->
                <Style x:Key="TitleBarButtonStyle" TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#DDDDDD"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#3F3F41"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E81123"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style x:Key="ActionButtonStyle" TargetType="Button">
                    <Setter Property="Background" Value="#333337"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#3F3F46"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style x:Key="PrimaryActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1C97EA"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!-- Icon Helper -->
                <Style x:Key="PathIconStyle" TargetType="Path">
                    <Setter Property="Fill" Value="White"/>
                    <Setter Property="Width" Value="16"/>
                    <Setter Property="Height" Value="16"/>
                    <Setter Property="Stretch" Value="Uniform"/>
                </Style>

                <!-- Geometries -->
                <Geometry x:Key="Icon.Search">M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z</Geometry>
                <Geometry x:Key="Icon.Refresh">M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z</Geometry>
                <Geometry x:Key="Icon.Save">M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z</Geometry>
                <Geometry x:Key="Icon.Back">M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z</Geometry>
                <Geometry x:Key="Icon.SortAz">M19,17H22L18,21L14,17H17V3H19V17M11,3V5H3V3H11M9,7V9H3V7H9M7,11V13H3V11H7M5,15V17H3V15H5M3,19V21H3V19H3Z</Geometry>
                <Geometry x:Key="Icon.Filter">M10,18H14V16H10V18M3,6V8H21V6H3M6,13H18V11H6V13Z</Geometry>

                <!-- ComboBox Styling -->
                <Style TargetType="ComboBox">
                    <Setter Property="Background" Value="#333337"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBox">
                                <Grid>
                                    <ToggleButton x:Name="ToggleButton" Background="{TemplateBinding Background}" Foreground="{TemplateBinding Foreground}" BorderThickness="0" HorizontalContentAlignment="Left" ClickMode="Press" Focusable="false" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="30"/>
                                                        </Grid.ColumnDefinitions>
                                                        <ContentPresenter Grid.Column="0" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}"/>
                                                        <Path Grid.Column="1" Data="M0,0 L4,4 L8,0 Z" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                    <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" Margin="10,3,30,3" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                        <Grid x:Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                            <Border x:Name="DropDownBorder" Background="#2D2D30" BorderThickness="1" BorderBrush="#3F3F46" CornerRadius="4"/>
                                            <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                            </ScrollViewer>
                                        </Grid>
                                    </Popup>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="2" Margin="2">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#3F3F46"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Window.Resources>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title Bar -->
                <Grid Grid.Row="0" Background="#252526">
                    <TextBlock Text="SAM Reborn 2026" VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="SemiBold" FontSize="14" Foreground="#DDDDDD"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="&#xE921;" Width="46" Click="Minimize_Click" Style="{StaticResource TitleBarButtonStyle}" FontFamily="Segoe MDL2 Assets" FontSize="10" WindowChrome.IsHitTestVisibleInChrome="True"/>
                        <Button x:Name="MaximizeBtn" Content="&#xE922;" Width="46" Click="Maximize_Click" Style="{StaticResource TitleBarButtonStyle}" FontFamily="Segoe MDL2 Assets" FontSize="10" WindowChrome.IsHitTestVisibleInChrome="True"/>
                        <Button Content="&#xE8BB;" Width="46" Click="Close_Click" Style="{StaticResource CloseButtonStyle}" FontFamily="Segoe MDL2 Assets" FontSize="10" WindowChrome.IsHitTestVisibleInChrome="True"/>
                    </StackPanel>
                </Grid>

                <!-- Content -->
                <Grid
                    Grid.Row="1">
                    <!-- Home View (Game List) -->
                    <Grid x:Name="HomeView" Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="20,20,20,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="#2D2D30" CornerRadius="4" Height="40">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Path Grid.Column="0" Data="{StaticResource Icon.Search}" Style="{StaticResource PathIconStyle}" Fill="#888888" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBox x:Name="SearchBox" Grid.Column="1" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                                    <Button x:Name="ClearSearchBtn" Grid.Column="2" Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="12" Width="40" Background="Transparent" Foreground="#888888" BorderThickness="0" Visibility="Collapsed" Click="ClearSearch_Click"/>
                                </Grid>
                            </Border>
                            <Button Grid.Column="1" Width="40" Height="40" Margin="10,0,0,0" Click="Filter_Click" Style="{StaticResource ActionButtonStyle}">
                                <Path Data="{StaticResource Icon.Filter}" Style="{StaticResource PathIconStyle}"/>
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem x:Name="FilterGames" Header="Games" IsCheckable="True" Click="FilterOption_Click"/>
                                        <MenuItem x:Name="FilterMods" Header="Mods" IsCheckable="True" Click="FilterOption_Click"/>
                                        <MenuItem x:Name="FilterDemos" Header="Demos" IsCheckable="True" Click="FilterOption_Click"/>
                                        <MenuItem x:Name="FilterJunk" Header="Junk" IsCheckable="True" Click="FilterOption_Click"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                            <Button Grid.Column="2" Width="40" Height="40" Margin="10,0,0,0" Click="Refresh_Click" Style="{StaticResource ActionButtonStyle}">
                                <Path Data="{StaticResource Icon.Refresh}" Style="{StaticResource PathIconStyle}"/>
                            </Button>
                        </Grid>
                        <ListView x:Name="GamesList" Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="15,0,15,15" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemWidth="230"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#252526" CornerRadius="8" Margin="5" MouseLeftButtonUp="Game_Click" Cursor="Hand">
                                        <Grid Height="140">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="100"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0" CornerRadius="8,8,0,0" ClipToBounds="True">
                                                <Image Source="{Binding Image}" Stretch="UniformToFill"/>
                                            </Border>
                                            <Border Grid.Row="1" Background="#2D2D30" CornerRadius="0,0,8,8">
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" Margin="10,0" Foreground="White"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <Grid x:Name="HomeLoadingOverlay" Grid.Row="1" Background="#B21E1E1E" Visibility="Visible">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Path Data="{StaticResource Icon.Refresh}" Width="32" Height="32" Fill="White" RenderTransformOrigin="0.5,0.5">
                                    <Path.RenderTransform><RotateTransform x:Name="HomeRotate" Angle="0"/></Path.RenderTransform>
                                    <Path.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="HomeRotate" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:1.5" RepeatBehavior="Forever"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Path.Triggers>
                                </Path>
                                <TextBlock Text="Loading Library..." Margin="0,15,0,0" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Game Details View -->
                    <Grid x:Name="GameDetailsView" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="20,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Width="40" Height="40" Click="Back_Click" Style="{StaticResource ActionButtonStyle}">
                                <Path Data="{StaticResource Icon.Back}" Style="{StaticResource PathIconStyle}"/>
                            </Button>
                            <StackPanel Grid.Column="1" Margin="20,0">
                                <TextBlock x:Name="SelectedGameName" FontSize="24" FontWeight="Bold" Foreground="White"/>
                                <TextBlock x:Name="SelectedGameInfo" FontSize="14" Foreground="#888888"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button x:Name="BulkActionsButton" Height="40" Margin="5,0" Style="{StaticResource ActionButtonStyle}" Click="BulkAction_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Bulk Actions" VerticalAlignment="Center" Margin="5,0"/>
                                        <Path Data="M0,0 L4,4 L8,0 Z" Fill="White" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Unlock All" Click="UnlockAll_Click"/>
                                            <MenuItem Header="Lock All" Click="LockAll_Click"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                                <ComboBox x:Name="AchievementFilter" Width="90" Height="40" Margin="5,0" SelectionChanged="AchievementFilter_SelectionChanged">
                                    <ComboBoxItem Content="All" Tag="all"/>
                                    <ComboBoxItem Content="Locked" Tag="locked"/>
                                    <ComboBoxItem Content="Unlocked" Tag="unlocked"/>
                                </ComboBox>
                                <Button x:Name="SortButton" Width="90" Height="40" Margin="5,0" Click="Sort_Click" Style="{StaticResource ActionButtonStyle}">
                                    <Path x:Name="SortIcon" Data="{StaticResource Icon.SortAz}" Style="{StaticResource PathIconStyle}"/>
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Name (A-Z)" Tag="Name_Asc" Click="SortOption_Click"/>
                                            <MenuItem Header="Name (Z-A)" Tag="Name_Desc" Click="SortOption_Click"/>
                                            <Separator/> <MenuItem Header="Rarity (Rarest first)" Tag="Rarity_Asc" Click="SortOption_Click"/>
                                            <MenuItem Header="Rarity (Common first)" Tag="Rarity_Desc" Click="SortOption_Click"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                                <Button Width="40" Height="40" Margin="5,0" Click="RefreshGame_Click" Style="{StaticResource ActionButtonStyle}">
                                    <Path Data="{StaticResource Icon.Refresh}" Style="{StaticResource PathIconStyle}"/>
                                </Button>
                                <Button Margin="5,0,0,0" Style="{StaticResource PrimaryActionButtonStyle}" Height="40" MinWidth="100" Padding="15,0" Click="Store_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="{StaticResource Icon.Save}" Style="{StaticResource PathIconStyle}" Margin="0,0,8,0"/>
                                        <TextBlock Text="Save" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1">
                            <ListView x:Name="AchievementList" Background="Transparent" BorderThickness="0" Margin="15,0,15,15" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#252526" CornerRadius="8" Margin="0,0,0,8" Padding="15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition
                                                    Width="64"/> <!-- Image -->
                                                    <ColumnDefinition
                                                    Width="*"/> <!-- Title, Desc, Time -->
                                                    <ColumnDefinition
                                                    Width="150"/> <!-- Global % -->
                                                    <ColumnDefinition
                                                    Width="120"/>
                                                <!-- Checkbox -->
                                                </Grid.ColumnDefinitions>

                                                <!-- Column 1: Image -->
                                                <Image
                                                Grid.Column="0" Source="{Binding Icon}" Width="64" Height="64" VerticalAlignment="Center"/>

                                                <!-- Column 2: Info -->
                                                <StackPanel Grid.Column="1" Margin="20,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Description}" FontSize="13" Foreground="#BBBBBB" TextWrapping="Wrap" Margin="0,0,10,4"/>
                                                    <TextBlock Text="{Binding UnlockTime, StringFormat='Unlocked: {0}'}" FontSize="11" Foreground="#888888">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding UnlockTime}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Column 3: Global Percentage -->
                                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding GlobalPercent, StringFormat='{}{0:N1}%'}" FontSize="18" Foreground="#007ACC" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="global rarity" FontSize="11" Foreground="#666666" HorizontalAlignment="Center"/>
                                                </StackPanel>

                                                <!-- Column 4: Checkbox -->
                                                <CheckBox Grid.Column="3" IsChecked="{Binding IsAchieved, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Achieved" Foreground="#DDDDDD">
                                                    <CheckBox.LayoutTransform>
                                                        <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                                    </CheckBox.LayoutTransform>
                                                </CheckBox>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <Grid x:Name="LoadingOverlay" Background="#B21E1E1E" Visibility="Collapsed">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Path Data="{StaticResource Icon.Refresh}" Width="32" Height="32" Fill="White" RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform><RotateTransform x:Name="Rotate" Angle="0"/></Path.RenderTransform>
                                        <Path.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="Rotate" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:1.5" RepeatBehavior="Forever"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Path.Triggers>
                                    </Path>
                                    <TextBlock Text="Loading achievements..." Margin="0,15,0,0" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                        <Border Grid.Row="1" VerticalAlignment="Bottom" Background="#007ACC" Padding="10,2">
                            <TextBlock x:Name="DetailsStatus" FontSize="11" Foreground="White"/>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Window>
